<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="autorto.autodrivingtest.UserInfo"
    tools:showIn="@layout/activity_user_info">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:id="@+id/textView1"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_gravity="left"
        android:layout_marginTop="50dp"
        android:maxWidth="100dp"
        android:layout_alignParentRight="false"
        android:theme="@style/MyTheme"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="        "
        android:id="@+id/name"
        android:layout_gravity="right"
        android:layout_above="@+id/textView2"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:layout_marginLeft="78dp"
        android:theme="@style/MyTheme"
        android:layout_marginStart="78dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="BirthDate"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="left"
        android:layout_marginTop="60dp"
        android:layout_alignLeft="@+id/dob"
        android:maxWidth="100dp"
        android:theme="@style/MyTheme"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="           "
        android:id="@+id/dob"
        android:layout_gravity="right"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignLeft="@+id/name"
        android:theme="@style/MyTheme"
        android:layout_alignStart="@+id/name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ID"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp"
        android:layout_gravity="left"
        android:maxWidth="100dp"
        android:theme="@style/MyTheme"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="                     "
        android:id="@+id/id"
        android:layout_gravity="right"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignLeft="@+id/dob"
        android:theme="@style/MyTheme"
        android:layout_alignStart="@+id/dob" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StartTest"
        android:id="@+id/button2"
        android:onClick="detailsDisplayHandler"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CancelTest"
        android:onClick="cancelTestStartHandler"
        android:id="@+id/button3"
        android:layout_alignTop="@+id/button2"
        android:layout_alignLeft="@+id/id"
        android:layout_alignStart="@+id/id" />


</RelativeLayout>
