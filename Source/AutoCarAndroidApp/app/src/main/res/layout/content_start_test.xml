<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/info"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="autorto.autodrivingtest.StartTest"
    tools:showIn="@layout/activity_start_test"
    android:background="#ffffff">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter Biometric ID"
        android:id="@+id/textView4"
        android:theme="@style/MyTheme"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/uid"
        android:layout_marginTop="72dp"
        android:theme="@style/MyTheme"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify Details"
        android:id="@+id/button"
        android:onClick="testVerificationHandler"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/uid"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
